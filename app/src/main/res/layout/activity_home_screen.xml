<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity_Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.ActionBarContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_alignParentLeft="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/infoapp"
                    android:layout_width="38dp"
                    android:layout_height="35dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reronggo"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:layout_centerHorizontal="true"
                    />
                <ImageButton
                    android:layout_margin="8dp"
                    android:id="@+id/chatroom"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/chatroom"/>
            </RelativeLayout>
        </android.support.v7.widget.ActionBarContainer>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/penampilhalaman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tab_kontak"
                android:icon="@drawable/homedashboard"/>

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tab_listtrans"
                android:icon="@drawable/riwayat"/>
            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tab_account"
                android:icon="@drawable/acc"/>
        </android.support.design.widget.TabLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>